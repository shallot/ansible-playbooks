---

# roles/eyeo/sitescripts/tasks/main.yml
test_sitescripts_ini_settings__to_merge:
  - section: "DEFAULT"
    key: "mailer"
    value: "/usr/sbin/sendmail"
  - section: "multiplexer"
    key: "sitescripts.send_installation_link.web.send_installation_link"
    value: ""
  - section: "send_installation_link"
    key: "email_template"
    value: "send_installation_link/template/adblockbrowser_installation_link.tmpl"

# roles/apache/tasks/main.yml
# https://httpd.apache.org/docs/current/mod/
test_apache2_modules__to_merge:
  proxy: &apache2_standard_module
    package: false
  proxy_http:
    *apache2_standard_module

# roles/apache2/tasks/main.yml
# provision-eyeo-cms-web-servers.yml
test_apache2_sites__to_merge:
  apache2-sitescripts-server-0.test:
    # yamllint disable rule:line-length
    configuration: |
      <VirtualHost *:80>
        ServerName apache2-sitescripts-server-0.test

        # this part used to be generated by templates/site.conf.erb based on
        # custom @multiplexer_locations
        <Location /sendInstallationLink>
          SetHandler "proxy:unix:{{ sitescripts_multiplexer_socket_path }}|fcgi://localhost/"
        </Location>

      </VirtualHost>
    # yamllint enable rule:line-length

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "apache2-sitescripts-servers"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.100.33"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-custom-systems.yml"
  - "provision-apache2-sitescripts-servers.yml"
