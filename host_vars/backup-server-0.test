---

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "backup-servers"
  - "backup-hosts"
  - "postfix-agents"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.100.80"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-custom-systems.yml"
  - "provision-postfix-agents.yml"
  - "provision-ssh-keys.yml"

# tasks/paths.yml
ssh_keys_dirs_custom_paths__to_merge:
  /opt/backup/keys:
    path: "/opt/backup/keys"
    state: "directory"
    owner: "backup"
    group: "backup"
    mode: "0750"
  "{{ automated_backup_server_directory }}":
    path: "{{ automated_backup_server_directory }}"
    state: "directory"
    owner: "backup"
    group: "backup"
    mode: "0750"

# tasks/ssh-keys.yml
default_custom_ssh_keys__to_merge:
  default:
    path: "{{ automated_backup_server_key }}"
    type: "ed25519"
    size: 521
    owner: "backup"
    group: "backup"
