---

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "ca-servers"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.123.10"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-custom-systems.yml"
  - "provision-ca-servers.yml"

# tasks/paths.yml
test_ca_custom_paths__to_merge:
  testca:
    path: "/opt/ca/test-ca"
    state: "directory"

# tasks/x509-keys.yml
test_x509_keys__to_merge:
  testca:
    path: "/opt/ca/test-ca/test-ca.key"
    passphrase: "test"
    cipher: "auto"
  testcert:
    path: "/opt/ca/test-ca/test-cert.key"
    passphrase: "test2"
    cipher: "auto"

# tasks/x509-csrs.yml
test_x509_csrs__to_merge:
  testca:
    privatekey_path: "/opt/ca/test-ca/test-ca.key"
    privatekey_passphrase: "test"
    path: "/opt/ca/test-ca/test-ca-csr.pem"
    common_name: "Test CA"
    key_usage_critical: "yes"
    key_usage:
      - "Certificate Sign"
      - "CRL Sign"
    basic_constraints_critical: "yes"
    basic_constraints:
      - "CA:TRUE"
  testcert:
    privatekey_path: "/opt/ca/test-ca/test-cert.key"
    privatekey_passphrase: "test2"
    path: "/opt/ca/test-ca/test-cert-csr.pem"
    common_name: "Test Cert"

# tasks/x509-certificates.yml
test_x509_certs__to_merge:
  testca:
    privatekey_path: "/opt/ca/test-ca/test-ca.key"
    privatekey_passphrase: "test"
    csr_path: "/opt/ca/test-ca/test-ca-csr.pem"
    path: "/opt/ca/test-ca/test-ca.pem"
    provider: "selfsigned"
  testcert:
    csr_path: "/opt/ca/test-ca/test-cert-csr.pem"
    path: "/opt/ca/test-ca/test-cert.pem"
    provider: "ownca"
    ownca_path: "/opt/ca/test-ca/test-ca.pem"
    ownca_privatekey_path: "/opt/ca/test-ca/test-ca.key"
    ownca_privatekey_passphrase: "test"
