---

# tasks/shells.yml
pre_seed_test_data_custom_shells__to_merge:
  0_loop_devices:
    cmd: |
      for i in $(seq 1 4); do
      test -s /tmp/file.$i ||
      dd if=/dev/zero of=/tmp/file.$i bs=1M count=10;
      sudo losetup /dev/loop$i ||
      sudo losetup loop$i /tmp/file.$i;
      done

# tasks/disk.yml
custom_disk_volume_groups:
  1_vg1:
    name: "vg01"
    pv:
      - "/dev/loop1"
      - "/dev/loop2"
  1_vg2:
    name: "vg02"
    pv:
      - "/dev/loop3"
      - "/dev/loop4"

# tasks/disk.yml
custom_disk_logical_volumes:
  2_lv1:
    name: "lv1"
    extents: "1"
    vg: "vg01"
    mountpoint: "/opt/lv1"
    fstab_options:
      - "noauto"
      - "acl"
    fstab_pass: 3
    filesystem: "{{ custom_disk_filesystem }}"
  2_lv2:
    name: "lv2"
    size: "1M"
    vg: "vg02"

# tasks/disk.yml
custom_disk_filesystem:
  "ext4"

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "custom-disk-hosts"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.17.26"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-custom-systems.yml"
  - "provision-custom-disk-hosts.yml"
