---

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "docker-gitlab-runners"
  - "docker-hosts"
  - "gitlab-runners"
  - "distpartners-build-servers"

# https://www.vagrantup.com/docs/vagrantfile/machine_settings.html
vagrant_box:
  "debian/buster64"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.30.13"

# tasks/users.yml
host_specific_custom_users__to_merge:
  example:
    comment: "Host-specific example user (via Ansible)"
    groups:
      - "users"
      - "staff"
  exampleexecutee:
    comment: ""
    groups:
      - "users"
      - "staff"

# Custom /sudoers.d/ files
sudo_entries:
  - executer: "example"
    executee: "exampleexecutee"
    binary: "/bin/kill"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-distpartners-build-servers.yml"
