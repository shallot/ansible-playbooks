---

# provision-eyeo-cms-web-servers.yml
test_eyeo_cms_content_repos__to_merge:
  adblockbrowser.org:
    repo: "https://gitlab.com/eyeo/devops/examples/web.adblockbrowser.org.git"
    version: "gitlab-ci"

# roles/eyeo/sitescripts/tasks/main.yml
test_sitescripts_ini_settings__to_merge:
  - section: "DEFAULT"
    key: "mailer"
    value: "/usr/sbin/sendmail"
  - section: "multiplexer"
    key: "sitescripts.send_installation_link.web.send_installation_link"
    value: ""
  - section: "send_installation_link"
    key: "email_template"
    value: "send_installation_link/template/adblockbrowser_installation_link.tmpl"

# roles/eyeo/mimeo/tasks/main.yml
# tasks/mimeo.yml
test_custom_mimeo_settings__to_merge:
  submitfeedback:
    port: "8000"
    response: "Feedback submitted"
    output_directory: "/var/log/mimeo"
    output_filename: "submit-feedback.log"

# roles/apache2/tasks/main.yml
# provision-eyeo-cms-web-servers.yml
test_apache2_sites__to_merge:
  adblockbrowser.org:
    # yamllint disable rule:line-length
    configuration: |
      <VirtualHost *:80>

        {{ eyeo_cms_shared_apache_config | replace("_SITE_NAME_", "adblockbrowser.org") | indent(2) }}

        # this part used to be @aliases
        ServerAlias www.adblockbrowser.org
        RewriteCond %{HTTP_HOST} ^www.adblockbrowser.org$
        RewriteRule ^/(.*)$ http://adblockbrowser.org/$1 [R,L]

        # this part is supported by mimeo.py
        <Location /submit-feedback>
          ProxyPass http://127.0.0.1:{{ custom_mimeo_settings.submitfeedback.port }}/submit-feedback
          ProxyPassReverse http://127.0.0.1:{{ custom_mimeo_settings.submitfeedback.port }}/submit-feedback
          ProxyPreserveHost On
        </Location>

        # this part used to be generated by templates/site.conf.erb based on
        # custom @multiplexer_locations
        <Location /sendInstallationLink>
          SetHandler "proxy:unix:{{ sitescripts_multiplexer_socket_path }}|fcgi://localhost/"
        </Location>

      </VirtualHost>
    # yamllint enable rule:line-length
    eyeo_cms_web_required:
      true
  example.com:
    configuration: |
      <VirtualHost *:80>
        ServerName example.com
      </VirtualHost>
    eyeo_cms_web_required:
      false
  example.org:
    configuration: |
      <VirtualHost *:80>
        ServerName example.org
      </VirtualHost>

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "eyeo-cms-web-servers"
  - "apache2-servers"
  - "apache2-mimeo-servers"
  - "apache2-sitescripts-servers"
  - "gitlab-runners"

# https://docs.ansible.com/ansible/latest/user_guide/playbooks_tags.html
vagrant_tags:
  - "generate_content"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.100.31"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-custom-systems.yml"
  - "provision-eyeo-cms-web-servers.yml"
  - "provision-icinga-clients.yml"
