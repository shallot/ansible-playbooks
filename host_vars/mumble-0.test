---

# https://wiki.mumble.info/wiki/Murmurguide
mumble_server_configuration_options:
  absent_example:
    state: "absent"
  serverpassword:
    value: "changeme"

# https://docs.ansible.com/ansible/latest/user_guide/intro_inventory.html
vagrant_groups:
  - "mumble-servers"

# https://www.vagrantup.com/intro/getting-started/networking.html
vagrant_networks:
  - private_network:
      ip: "10.8.100.150"

# https://www.vagrantup.com/docs/provisioning/ansible.html
vagrant_playbooks:
  - "provision-custom-systems.yml"
  - "provision-mumble-servers.yml"
